<section class="content">

  <h1 class="pageHead">BURGERS!!</h1>

  <div class="burgerListsSection">
    <ul class="burgerList">
              <h2>LIST OF BURGERS</h2>
      {{#each burgers}}
      {{#unless devoured}}
      <ul class="burgerItem">
        <li>{{burger_name}} <button class="devourButton" value = {{id}}>
        DEVOUR!
        </button></li>
      </ul>
      {{/unless}}
      {{/each}}
    </ul>

    <ul class="burgerList">
       <h2>DEVOURED BURGER</h2>
      {{#each burgers}}
      {{#if devoured}}
      <ul class="burgerItem devoured">
        <li>{{burger_name}}</li>
      </ul>
      {{/if}}
      {{/each}}
    </ul>
  </div>


  <h2>ADD A BURGER YOU WISH TO DEVOUR</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="ca">BURGER NAME:</label>
      <input type="text" id="ca" name="name">
      <button type="submit">ADD IT TO LIST</button>
    </div>
  </form>
</section>